{
  "manifest_version": 3,
  "name": "ReThread",
  "version": "1.0",
  "description": "Find second-hand alternatives while browsing fast fashion website",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "*://*.hm.com/*",
    "*://*.shein.com/*",
    "*://*.zara.com/*",
    "*://*.depop.com/*",
    "*://*.grailed.com/*",
    "*://*.poshmark.com/*",
    "*://*.thredup.com/*",
    "*://*.mercari.com/*",
    "*://*.vinted.com/*",
    "*://*.etsy.com/*",
    "*://*.ebay.com/*",
    "*://*.asos.com/*",
    "*://*.fashionnova.com/*",
    "*://*.forever21.com/*",
    "*://*.urbanoutfitters.com/*",
    "*://*.nordstrom.com/*",
    "*://*.macy.com/*",
    "*://*.uniqlo.com/*",
    "*://*.gap.com/*",
    "*://*.zara.com/*",
    "*://*.hollister.com/*",
    "*://*.abercrombie.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "content_scripts": [
    {
      "matches": [
   
        "<all_urls>"
      ],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "128": "icon.png"
  }
} 