{
  "manifest_version": 3,
  "name": "ReThread",
  "version": "1.0",
  "description": "Find sustainable alternatives to fast fashion items",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "*://*.hm.com/*",
    "*://*.shein.com/*",
    "*://*.zara.com/*",
    "*://*.fashionnova.com/*",
    "*://*.forever21.com/*",
    "*://*.uniqlo.com/*",
    "*://*.gap.com/*",
    "*://*.hollister.com/*",
    "*://*.abercrombie.com/*",
    "*://*.depop.com/*",
    "*://*.grailed.com/*",
    "*://*.poshmark.com/*",
    "*://*.thredup.com/*",
    "*://*.mercari.com/*",
    "*://*.vinted.com/*",
    "*://*.etsy.com/*",
    "*://*.ebay.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.hm.com/*",
        "*://*.shein.com/*",
        "*://*.zara.com/*",
        "*://*.fashionnova.com/*",
        "*://*.forever21.com/*",
        "*://*.uniqlo.com/*",
        "*://*.gap.com/*",
        "*://*.hollister.com/*",
        "*://*.abercrombie.com/*",
        "*://*.depop.com/*",
        "*://*.grailed.com/*",
        "*://*.poshmark.com/*",
        "*://*.thredup.com/*",
        "*://*.mercari.com/*",
        "*://*.vinted.com/*",
        "*://*.etsy.com/*",
        "*://*.ebay.com/*"
      ],
      "js": ["aiService.js"],
      "run_at": "document_end"
    },
    {
      "matches": [
        "*://*.hm.com/*",
        "*://*.shein.com/*",
        "*://*.zara.com/*",
        "*://*.fashionnova.com/*",
        "*://*.forever21.com/*",
        "*://*.uniqlo.com/*",
        "*://*.gap.com/*",
        "*://*.hollister.com/*",
        "*://*.abercrombie.com/*",
        "*://*.depop.com/*",
        "*://*.grailed.com/*",
        "*://*.poshmark.com/*",
        "*://*.thredup.com/*",
        "*://*.mercari.com/*",
        "*://*.vinted.com/*",
        "*://*.etsy.com/*",
        "*://*.ebay.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
} 